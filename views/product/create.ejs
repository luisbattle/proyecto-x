<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head',{title:'Creacion'}) %>

<link rel="stylesheet" href="/stylesheets/creacion.css">

<body>
    <%- include('../partials/header') %>
    <h1>Creacion de producto
    </h1>
    <div class="contenedor-grande">
        <form action="/product/create" method="POST" enctype="multipart/form-data">
            <div class="formulario">
                <div class="datos">

                    <div>
                        <input type="text" name="name" placeholder="Nombre" class="form-control margen-tres">
                    </div>

                    <div class>
                        <input type="number" name="price" placeholder="Precio" class="form-control margen-tres">
                    </div>

                    <div class>
                        <input type="text" name="detail" placeholder="Descripcion" class="form-control margen-tres">
                    </div>

                    <div>
                        <select class="form-control margen-tres" id="sel1" name="category">
                            <% categories.forEach(category => { %>
                            <option value=<%= category.id %>><%= category.name  %> </option>
                            <% }); %>
                        </select>
                    </div>
                    <div>
                        <input type="file" name="image" class="margen-tres form-control">
                    </div>
                </div>


                <div class="margen-de-boton dp-flex">
                    <button class="guardar-producto">Guardar</button>
                    <button class="guardar-producto" type="reset">Limpiar</button>
                </div>
            </div>
        </form>
    </div>



</body>
<%- include('../partials/footer') %>

</html>