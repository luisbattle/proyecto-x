<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{title:'Productos Pasteleria Coquita'}) %>

<link rel="stylesheet" href="/stylesheets/administracion.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
<link
    href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Montserrat&family=Pacifico&family=Roboto&display=swap"
    rel="stylesheet">

<body class="cuerpo">
    <div id="main">
        <%- include('../partials/header') %>
        <div class="col-12 col-sm-12">
        <div class="card card-primary card-outline card-tabs">
            <div class="card-header p-0 pt-1 border-bottom-0">
              <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                <li class="pt-2 px-3"><h6 class="card-title">Panel de administración</h6></li>
                <li class="nav-item">
                  <a class="nav-link active" id="custom-tabs-three-home-tab" data-toggle="pill" href="#custom-tabs-three-home" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">Productos</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="custom-tabs-three-profile-tab" data-toggle="pill" href="#custom-tabs-three-profile" role="tab" aria-controls="custom-tabs-three-profile" aria-selected="false">Usuarios</a>
                </li>
              </ul>
            </div>
            <div class="card-body">
              <div class="tab-content" id="custom-tabs-three-tabContent">
                <div class="tab-pane fade show active" id="custom-tabs-three-home" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                    <h1> ADMINISTRACIÓN DE PRODUCTOS</h1>
                    <div class= "boton-nuevo">
                        <a href="/product/create" >Subir nuevo producto</a> 
                    </div>
                    
                    <section class="detalle-productos">
            
                        <% products.forEach(product => { %>
                        <article class="producto">
                            <a href="/product/<%= product.id %> ">
                                <img src="/images/<%= product.image %> " class="foto-torta">
                                <p class="texto-torta">
                                    <%= product.name %>
                                </p>
                                <p class="precio-torta">
                                    $ <%= product.price %>
                                </p>
                            </a>
            
                            <div class="boton-comprar">
                                <a href="/product/edit/<%= product.id %> ">
                                    <p class="texto-comprar">
                                        Editar producto
                                    </p>
                                </a>
                            </div>
                            <form action="/product/delete/<%= product.id %>?_method=DELETE" method="POST">
            
                                    <button class="boton-borrar" type="submit">
                                        Borrar Producto
                                    </button>
            
                            </form>
            
                        </article>
                        <% }); %>
                    </section>
                </div>

                <div class="tab-pane fade d-flex" id="custom-tabs-three-profile" role="tabpanel" aria-labelledby="custom-tabs-three-profile-tab">
                    <div class="card col-12 col-sm-12 altura">
                      <div class="card-header border-0">
                        <h4 class="card-title">Listado de usuarios</h4>
                      </div>
                      <div class="card-body table-responsive p-0">
                        <table class="table table-striped table-valign-middle">

                          <thead>
                          <tr>
                            <th></th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Email</th>
                            <th>Perfil</th>
                            <th>Fecha de registro</th>
                            <th>Acciones</th>
                          </tr>
                          </thead>
                          <tbody>
                            <% users.forEach(user => { %>
                          <tr>
                            <td>
                              <img src="/images/avatars/<%= user.image %> " alt="Avatar" class="img-circle img-size-32 mr-2">
                              
                            </td>
                            <td><%= user.firstName%></td>
                            <td>
                              <%=user.lastName%>
                            </td>
                            <td>
                              <%= user.email %>
                            </td>
                            <td>
                              <%= user.profile %>
                            </td>
                            <td>
                              <%= user.createdAt %>
                            </td>
                            <td>
                              <div class="row">
                                <form action="/administracion/profile/<%= user.id %>"  method="GET">
                                  <div >
                                      <button type="submit" class="btn btn-sm btn-success">Perfil</button>
                                  </div>
                              </form>
                                <form action="/administracion/delete/<%= user.id %>"  method="POST">
                                    <div class="ml-1">
                                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                    </div>
                                </form>
                            </div>
                            </td>
                          </tr>
                          <% }); %>
                          </tbody>
                        </table>
                      </div>
                    </div>
                    
                </div>
                
              </div>
            </div>
            <!-- /.card -->
          </div>
        </div>


        
    </div>

        <%- include('../partials/footer') %>
</body>

</html>